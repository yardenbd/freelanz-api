  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:user": "nest start user --watch",
    "start:freelanz": "nest start freelanz --watch",
    "start:auth": "nest start auth --watch",
    "start:job": "nest start job --watch",
    "start:swipe": "nest start swipe --watch",
    "start:chat": "nest start chat --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/freelanz/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/freelanz/test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.693.0",
